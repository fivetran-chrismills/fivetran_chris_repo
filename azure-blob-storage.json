{
  "kind": "PersistentVolumeClaim",
  "apiVersion": "v1",
  "metadata": {
    "name": "azure-blob-storage",
    "namespace": "default"
  },
  "spec": {
    "accessModes": ["ReadWriteMany"],
    "resources": {
      "requests": {
        "storage": "10Gi"
      }
    },
    "storageClassName": "default",
    "volumeMode": "Filesystem"
  }
}
